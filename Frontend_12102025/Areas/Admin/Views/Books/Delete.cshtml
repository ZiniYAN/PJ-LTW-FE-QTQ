@model Frontend_12102025.Models.BookEdition
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    // Lay ra url cua anh do bookedition luu BookImages la collection
    var mainImage = Model.BookImages?.FirstOrDefault();
    var imageUrl = mainImage?.ImageUrl;
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Admin Stylesheet/ProductDelete.css" />
</head>

<div class="details-container">
    <h2>Delete</h2>
    <hr />
    <div class="delete-warning">
        <h3>⚠️ Are you sure you want to delete this?</h3>
    </div>

    <div class="details-grid">
        <!-- Hình -->
        <div class="image-section">
            <div class="image-box">
                <img src="@imageUrl" alt="@Model.BookTitle.Title" />
            </div>
        </div>

        <!-- Thông tin -->
        <div class="info-box">
            <h4>Book Information</h4>
            <dl>
                <dt>@Html.DisplayNameFor(model => model.BookTitle.Title)</dt>
                <dd>@Html.DisplayFor(model => model.BookTitle.Title)</dd>

                <dt>@Html.DisplayNameFor(model => model.Price)</dt>
                <dd>@Html.DisplayFor(model => model.Price)</dd>

                <dt>@Html.DisplayNameFor(model => model.Stock)</dt>
                <dd>@Html.DisplayFor(model => model.Stock)</dd>

                <dt>@Html.DisplayNameFor(model => model.ISBN)</dt>
                <dd>@Html.DisplayFor(model => model.ISBN)</dd>

                <dt>@Html.DisplayNameFor(model => model.BookTitle.Description)</dt>
                <dd>@Html.DisplayFor(model => model.BookTitle.Description)</dd>

                <dt>@Html.DisplayNameFor(model => model.PublishDate)</dt>
                <dd>@Html.DisplayFor(model => model.PublishDate)</dd>

                <dt>@Html.DisplayNameFor(model => model.BookTitle.Author.AuthorName)</dt>
                <dd>@Html.DisplayFor(model => model.BookTitle.Author.AuthorName)</dd>

                <dt>@Html.DisplayNameFor(model => model.BookTitle.Category.CategoryName)</dt>
                <dd>@Html.DisplayFor(model => model.BookTitle.Category.CategoryName)</dd>

                <dt>@Html.DisplayNameFor(model => model.BookTitle.Publisher.PublisherName)</dt>
                <dd>@Html.DisplayFor(model => model.BookTitle.Publisher.PublisherName)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions">
                    <input type="submit" value="Delete" class="btn btn-delete" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-back" })
                </div>
            }
        </div>
    </div>
</div>