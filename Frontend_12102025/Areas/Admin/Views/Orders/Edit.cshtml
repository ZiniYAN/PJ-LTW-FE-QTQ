@model Frontend_12102025.Models.Order

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Admin Stylesheet/OrderEdit.css" />
</head>

<div class="content-wrapper">
    <h2>Edit Order</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Order Information</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.OrderId)

            <div class="form-group">
                @Html.LabelFor(model => model.UserId, "User", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("UserId", null, "-- Select User --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                </div>
            </div>
                
            <div class="form-group">
                @Html.LabelFor(model => model.TotalAmount, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TotalAmount, new { htmlAttributes = new { @class = "form-control", type = "number", step = "1000" } })
                    @Html.ValidationMessageFor(model => model.TotalAmount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PaymentMethod, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.PaymentMethod,
                        new SelectList(new[] { "Cash", "Credit Card", "Bank Transfer", "E-Wallet" }),
                        "-- Select Payment Method --",
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentMethod, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PaymentStatus, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.PaymentStatus,
                        new SelectList(new[] { "Pending", "Paid", "Failed"}),
                        "-- Select Payment Status --",
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PaymentStatus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ShippingAddressId, "Shipping Address", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("ShippingAddressId", null, "-- Select Shipping Address --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ShippingAddressId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CouponId, "Coupon (Optional)", htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownList("CouponId", null, "-- No Coupon --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CouponId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OrderStatus, htmlAttributes: new { @class = "control-label" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.OrderStatus,
                        new SelectList(new[] { "Pending", "Processing", "Shipped", "Delivered", "Cancelled" }),
                        "-- Select Order Status --",
                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OrderStatus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save Changes" class="btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}