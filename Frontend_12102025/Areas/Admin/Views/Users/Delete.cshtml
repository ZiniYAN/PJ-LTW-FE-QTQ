@model Frontend_12102025.Models.User
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Admin Stylesheet/UserDelete.css" />
</head>

<div class="content-wrapper">
    <h2>Delete User</h2>
    <h3>Are you sure you want to delete this user?</h3>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Username)</dt>
            <dd>@Html.DisplayFor(model => model.Username)</dd>

            <dt>@Html.DisplayNameFor(model => model.FullName)</dt>
            <dd>@Html.DisplayFor(model => model.FullName)</dd>

            <dt>@Html.DisplayNameFor(model => model.Email)</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
            <dd>@Html.DisplayFor(model => model.Phone)</dd>

            <dt>@Html.DisplayNameFor(model => model.UserRole)</dt>
            <dd>@Html.DisplayFor(model => model.UserRole)</dd>

            <dt>@Html.DisplayNameFor(model => model.CreatedAt)</dt>
            <dd>@(Model.CreatedAt.HasValue ? Model.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-actions">
                <input type="submit" value="Delete" class="btn-delete" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-back" })
            </div>
        }
    </div>
</div>