@model Frontend_12102025.Models.Order

@{
    var statusClass = "label-default";
    var statusText = Model.PaymentStatus;

    switch (Model.PaymentStatus)
    {
        case "Pending": statusClass = "label-warning"; statusText = "Chờ thanh toán"; break;
        case "Processing": statusClass = "label-info"; statusText = "Đang xử lý"; break;
        case "Shipping": statusClass = "label-primary"; statusText = "Đang vận chuyển"; break;
        case "Delivered": statusClass = "label-success"; statusText = "Đã giao"; break;
        case "Cancelled": statusClass = "label-danger"; statusText = "Đã hủy"; break;
    }
}

<div class="order-card">
    <div class="order-card-header">
        <div class="row">
            <div class="col-md-8">
                <span class="order-id">Đơn hàng</span>
                <span class="order-date">
                    <i class="glyphicon"></i> @String.Format("{0:dd/MM/yyyy HH:mm}", Model.OrderDate)
                </span>
            </div>
            <div class="col-md-4 text-right">
                <span class="label @statusClass">@statusText</span>
            </div>
        </div>
    </div>

    <div class="order-card-body">
        @if (Model.OrderDetails != null && Model.OrderDetails.Any())
        {
            // Chỉ hiện tối đa 4 sản phẩm đầu tiên
            foreach (var item in Model.OrderDetails.Take(4))
            {
                <div class="order-item">
                    <div class="item-image">
                        @if (item.BookEdition != null && !string.IsNullOrEmpty(item.BookEdition.CoverImage))
                        {
                            <img src="@item.BookEdition.CoverImage" alt="@item.BookEdition.BookTitle" />
                        }
                        else
                        {
                            <div class="no-image">No Img</div>
                        }
                    </div>
                    <div class="item-info">
                        <h5 class="item-name">
                            @if (item.BookEdition != null)
                            {@item.BookEdition.BookTitle }
                        else
                        { <text>Sản phẩm không tồn tại</text>}
                        </h5>
                        <div class="item-meta">
                            <span class="item-price">@String.Format("{0:N0}", item.UnitPrice) đ</span>
                            <span class="item-qty">x @item.Quantity</span>
                        </div>
                    </div>
                </div>
            }

            // Nếu có nhiều hơn 4 sản phẩm
            if (Model.OrderDetails.Count > 4)
            {
                <div class="more-items text-center">
                    <span>... và @(Model.OrderDetails.Count - 4) sản phẩm khác</span>
                </div>
            }
        }
    </div>

    <div class="order-card-footer">
        <div class="row vertical-align">
            <div class="col-xs-6">
                <span class="total-label">Tổng tiền:</span>
                <span class="total-amount">@String.Format("{0:N0}", Model.TotalAmount) đ</span>
            </div>
            <div class="col-xs-6 text-right">
                @if (Model.PaymentStatus == "Delivered")
                {
                    using (Html.BeginForm("Reorder", "Order", FormMethod.Post, new { style = "display:inline;" }))
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.OrderId" />
                        <button type="submit" class="btn btn-sm btn-default">Mua lại</button>
                    }
                }

                <a href="@Url.Action("OrderDetail", "Order", new { id = Model.OrderId })" class="btn btn-sm btn-primary">
                    Xem chi tiết
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .order-card {
        background: #fff;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        margin-bottom: 15px;
        transition: all 0.2s ease;
    }

        .order-card:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-color: #ccc;
        }

    .order-card-header {
        padding: 12px 15px;
        border-bottom: 1px solid #f0f0f0;
        background: #fafafa;
        border-radius: 4px 4px 0 0;
    }

    .order-id {
        font-weight: 600;
        color: #333;
        margin-right: 15px;
    }

    .order-date {
        color: #888;
        font-size: 13px;
    }

    .order-card-body {
        padding: 15px;
    }

    .order-item {
        display: flex;
        margin-bottom: 12px;
        padding-bottom: 12px;
        border-bottom: 1px dashed #eee;
    }

        .order-item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-bottom: none;
        }

    .item-image {
        width: 60px;
        height: 60px;
        border: 1px solid #eee;
        border-radius: 3px;
        overflow: hidden;
        margin-right: 15px;
        flex-shrink: 0;
    }

        .item-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .no-image {
        width: 100%;
        height: 100%;
        background: #f5f5f5;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
        color: #999;
    }

    .item-info {
        flex-grow: 1;
    }

    .item-name {
        margin: 0 0 5px;
        font-size: 14px;
        color: #333;
        line-height: 1.3;
    }

    .item-price {
        font-weight: 500;
        color: #d9534f;
    }

    .item-qty {
        color: #888;
        font-size: 13px;
        margin-left: 5px;
    }

    .more-items {
        color: #888;
        font-style: italic;
        font-size: 13px;
        margin-top: 5px;
    }

    .order-card-footer {
        padding: 12px 15px;
        border-top: 1px solid #f0f0f0;
        background: #fff;
        border-radius: 0 0 4px 4px;
    }

    .vertical-align {
        display: flex;
        align-items: center;
    }

    .total-label {
        color: #666;
        margin-right: 5px;
    }

    .total-amount {
        font-size: 16px;
        font-weight: 700;
        color: #d9534f;
    }

    /* Status Labels */
    .label-warning {
        background-color: #f0ad4e;
    }

    .label-info {
        background-color: #5bc0de;
    }

    .label-primary {
        background-color: #337ab7;
    }

    .label-success {
        background-color: #5cb85c;
    }

    .label-danger {
        background-color: #d9534f;
    }

    .label-default {
        background-color: #777;
    }
</style>
