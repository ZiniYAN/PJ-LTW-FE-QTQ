@model Frontend_12102025.Models.Order

@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">

            <!-- Icon thành công -->
            <div class="mb-4">
                <i class="fa-solid fa-circle-check text-success" style="font-size: 5rem;"></i>
            </div>

            <h2 class="text-success fw-bold mb-3">Đặt hàng thành công!</h2>
            <p class="lead mb-4">Cảm ơn bạn đã mua sắm. Đơn hàng của bạn đang được xử lý.</p>

            <!-- Thông tin tóm tắt đơn hàng -->
            <div class="card shadow-sm text-start mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0 fw-bold">Thông tin đơn hàng #@Model.OrderId</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-6 text-muted">Ngày đặt:</div>
                        <div class="col-6 fw-bold text-end">
                            @(Model.OrderDate.HasValue ? Model.OrderDate.Value.ToString("dd/MM/yyyy HH:mm") : "")
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6 text-muted">Phương thức thanh toán:</div>
                        <div class="col-6 fw-bold text-end">@Model.PaymentMethod</div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-6 text-muted">Tổng thanh toán:</div>
                        <div class="col-6 fw-bold text-danger text-end">
                            @((Model.TotalAmount ?? 0).ToString("N0")) đ
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-12">
                            <h6 class="fw-bold"><i class="fa-solid fa-location-dot me-2"></i>Giao tới:</h6>
                            @if (Model.ShippingAddress != null)
                            {
                                <p class="mb-1">@Model.ShippingAddress.AddressLine</p>
                                <small class="text-muted">
                                    Người nhận: @(Model.User != null ? Model.User.FullName : User.Identity.Name)
                                </small>
                            }
                            else
                            {
                                <span class="text-muted">Không có thông tin địa chỉ</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Các nút điều hướng -->
            <div class="d-flex justify-content-center gap-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-house me-2"></i>Về trang chủ
                </a>
                <a href="@Url.Action("OrderDetail", "Order", new { id = Model.OrderId })" class="btn btn-primary">
                    <i class="fa-solid fa-file-invoice me-2"></i>Xem chi tiết đơn hàng
                </a>
            </div>

        </div>
    </div>
</div>
