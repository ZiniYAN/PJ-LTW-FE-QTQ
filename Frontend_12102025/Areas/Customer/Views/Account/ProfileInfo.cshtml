@model Frontend_12102025.Models.Customer
@{ 
    ViewBag.Title = "Profile Info";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Thông tin tài khoản </h2>
    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Họ tên:</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.User.FullName)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Số điện thoại:</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.User.Phone)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Giới tính:</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.Gender)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Ngày sinh</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Email:</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.User.Email)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Địa chỉ:</strong>
                </div>
                <div class="col-md-9">
                    @if (Model.User.ShippingAddresses != null && Model.User.ShippingAddresses.Any())
                    {
                        foreach (var addr in Model.User.ShippingAddresses)
                        {
                            <div><i class="fa-solid me-1"></i>@addr.AddressLine</div>
                        }
                    }
                    else
                    {
                        <span class="text-muted font-italic">Chưa có địa chỉ</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <strong>Username:</strong>
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.User.Username)
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit Profile", "Index", "Account", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-secondary" })
    </div>
</div>