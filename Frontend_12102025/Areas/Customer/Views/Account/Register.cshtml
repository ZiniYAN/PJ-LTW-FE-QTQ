@model Frontend_12102025.Models.ViewModel.RegisterVM

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .register-wrapper {
            min-height: 80vh;
            display: flex;
            justify-content: center;
            padding-top: 60px;
            padding-bottom: 60px;
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        }

        .simple-register-container {
            border: 2px solid black;
            width: 100%;
            max-width: 800px;
            padding: 20px;
        }

        .register-title {
            font-size: 30px;
            font-weight: 700;
            color: #333;
            text-transform: uppercase;
            margin-bottom: 40px;
            letter-spacing: 1px;
            text-align: center;
        }

        .custom-label {
            display: block;
            font-weight: 700;
            font-size: 14px;
            color: #333;
            margin-bottom: 8px;
        }

        .custom-input {
            width: 100%;
            height: 45px;
            padding: 10px 15px;
            font-size: 16px;
            border: 1px solid #ddd;
            background-color: #fff;
            border-radius: 0;
            box-shadow: none;
            color: #555;
            margin-bottom: 5px;
        }

            .custom-input:focus {
                border-color: #aaa;
                outline: none;
                box-shadow: none;
            }

        .form-group {
            margin-bottom: 25px;
        }

        .btn-orange {
            background-color: #f29c58;
            color: white;
            font-weight: 700;
            font-size: 16px;
            padding: 12px 35px;
            border: none;
            border-radius: 2px;
            cursor: pointer;
            transition: background 0.3s;
            text-transform: uppercase;
            width: 100%;
            display: block;
        }

            .btn-orange:hover {
                background-color: #e08b4b;
                color: white;
            }

        .login-link {
            color: #4186a5;
            text-decoration: none;
            font-size: 15px;
            margin-top: 15px;
            display: inline-block;
        }

            .login-link:hover {
                text-decoration: underline;
            }

        .text-danger {
            font-size: 13px;
            margin-top: 5px;
            display: block;
        }

        /* Password Toggle & Strength */
        .password-wrapper {
            position: relative;
        }

        .toggle-password-btn {
            position: absolute;
            right: 10px;
            top: 8px;
            background: none;
            border: none;
            color: #777;
            cursor: pointer;
            padding: 5px;
        }

        .password-strength {
            height: 4px;
            border-radius: 2px;
            margin-top: 5px;
            transition: all 0.3s;
        }

        .strength-weak {
            background: #dc3545;
            width: 33%;
        }

        .strength-medium {
            background: #ffc107;
            width: 66%;
        }

        .strength-strong {
            background: #28a745;
            width: 100%;
        }

        /* Custom Radio for Gender */
        .gender-options {
            display: flex;
            gap: 20px;
            padding-top: 5px;
        }

        .gender-option label {
            font-weight: normal;
            margin-left: 5px;
            cursor: pointer;
        }
    </style>
}

<div class="register-wrapper">
    <div class="simple-register-container">
        <h1 class="register-title">Register</h1>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4">
                @TempData["Message"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "needs-validation", id = "registerForm", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                @* Username *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-label" for="txtUsername">Username *</label>
                        @Html.TextBoxFor(m => m.Username, new { @class = "custom-input", id = "txtUsername" })
                        <small id="usernameStatus" class="form-text"></small>
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Full Name *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-label" for="FullName">Full Name *</label>
                        @Html.TextBoxFor(m => m.FullName, new { @class = "custom-input" })
                        @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                @* Email *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-label" for="txtEmail">Email address *</label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "custom-input", type = "email", id = "txtEmail" })
                        <small id="emailStatus" class="form-text"></small>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Phone *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-label" for="Phone">Phone number *</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "custom-input" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                @* Password *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-label" for="txtPassword">Password *</label>
                        <div class="password-wrapper">
                            @Html.PasswordFor(m => m.Password, new { @class = "custom-input", id = "txtPassword", style = "padding-right: 40px;" })
                            <button type="button" id="togglePassword" class="toggle-password-btn">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div id="passwordStrength" class="password-strength"></div>
                        <small class="text-muted mt-1 d-block" style="font-size: 12px;">
                            Min 6 characters, including uppercase, lowercase and number
                        </small>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Confirm Password *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-label" for="txtConfirmPassword">Confirm Password *</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "custom-input", id = "txtConfirmPassword" })
                        <small id="confirmPasswordStatus" class="form-text"></small>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                @* Date of Birth *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-label" for="DateOfBirth">Date of Birth</label>
                        @Html.TextBoxFor(m => m.DateOfBirth, new { 
                            @class = "form-control", 
                            type = "date", 
                            min = "1924-01-01",
                            max = DateTime.Now.ToString("yyyy-MM-dd"),
                            placeholder = "dd/mm/yyyy (VD: 04/04/2006)" })
                        @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* Gender *@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="custom-label">Gender</label>
                        <div class="gender-options">
                            <div class="gender-option">
                                @Html.RadioButtonFor(m => m.Gender, "Nam", new { id = "genderMale" })
                                <label for="genderMale">Male</label>
                            </div>
                            <div class="gender-option">
                                @Html.RadioButtonFor(m => m.Gender, "Nữ", new { id = "genderFemale" })
                                <label for="genderFemale">Female</label>
                            </div>
                            <div class="gender-option">
                                @Html.RadioButtonFor(m => m.Gender, "Khác", new { id = "genderOther" })
                                <label for="genderOther">Other</label>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            @* Submit Button *@
            <div class="form-group mt-4">
                <button type="submit" class="btn-orange">
                    Register
                </button>
            </div>

            <div class="text-center">
                <p class="mb-0">
                    Bạn đã có tài khoản?
                    @Html.ActionLink("Đăng nhập", "Login", "Account",
                        new { area = "Customer" },
                        new { @class = "login-link" })
                </p>
            </div>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('#togglePassword').click(function() {
                var passwordField = $('#txtPassword');
                var icon = $(this).find('i');

                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Password strength checker
            $('#txtPassword').on('keyup', function() {
                var password = $(this).val();
                var strength = 0;
                var strengthBar = $('#passwordStrength');

                if (password.length >= 6) strength++;
                if (password.match(/[a-z]/)) strength++;
                if (password.match(/[A-Z]/)) strength++;
                if (password.match(/[0-9]/)) strength++;
                if (password.match(/[^a-zA-Z0-9]/)) strength++;

                strengthBar.removeClass('strength-weak strength-medium strength-strong');

                if (strength <= 2) {
                    strengthBar.addClass('strength-weak');
                } else if (strength <= 4) {
                    strengthBar.addClass('strength-medium');
                } else {
                    strengthBar.addClass('strength-strong');
                }
            });

            // Confirm password matching
            $('#txtConfirmPassword').on('keyup', function() {
                var password = $('#txtPassword').val();
                var confirmPassword = $(this).val();
                var status = $('#confirmPasswordStatus');

                if (confirmPassword.length > 0) {
                    if (password === confirmPassword) {
                        status.html('<span class="text-success" style="font-size:13px;">Passwords match</span>')
                            .removeClass('text-danger').addClass('text-success');
                    } else {
                        status.html('<span class="text-danger" style="font-size:13px;">Passwords do not match</span>')
                            .removeClass('text-success').addClass('text-danger');
                    }
                } else {
                    status.html('');
                }
            });

            // Check username availability (AJAX)
            var usernameTimeout;
            $('#txtUsername').on('keyup', function() {
                clearTimeout(usernameTimeout);
                var username = $(this).val();
                var status = $('#usernameStatus');

                if (username.length >= 3) {
                    usernameTimeout = setTimeout(function() {
                        $.ajax({
                            url: '@Url.Action("CheckUsername", "Account")',
                            type: 'GET',
                            data: { username: username },
                            success: function(response) {
                                if (response.available) {
                                    status.html('<span class="text-success" style="font-size:13px;">' + response.message + '</span>');
                                } else {
                                    status.html('<span class="text-danger" style="font-size:13px;">' + response.message + '</span>');
                                }
                            }
                        });
                    }, 500);
                } else {
                    status.html('');
                }
            });

            // Check email availability (AJAX)
            var emailTimeout;
            $('#txtEmail').on('keyup', function() {
                clearTimeout(emailTimeout);
                var email = $(this).val();
                var status = $('#emailStatus');

                if (email.length > 0 && email.includes('@@')) {
                    emailTimeout = setTimeout(function() {
                        $.ajax({
                            url: '@Url.Action("CheckEmail", "Account")',
                            type: 'GET',
                            data: { email: email },
                            success: function(response) {
                                if (response.available) {
                                    status.html('<span class="text-success" style="font-size:13px;">' + response.message + '</span>');
                                } else {
                                    status.html('<span class="text-danger" style="font-size:13px;">' + response.message + '</span>');
                                }
                            }
                        });
                    }, 500);
                } else {
                    status.html('');
                }
            });
        });
    </script>
}
