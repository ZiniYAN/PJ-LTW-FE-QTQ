@model Frontend_12102025.Models.ViewModel.LoginVM

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .login-container {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            padding: 40px 0;
        }

        .login-card {
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0,0,0,0.25);
            overflow: hidden;
            background: white;
        }

        .login-image {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            padding: 60px 40px;
        }

            .login-image h3 {
                font-weight: 700;
                margin-bottom: 20px;
            }

        .login-form {
            padding: 60px 40px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .login-header h2 {
                color: #667eea;
                font-weight: 700;
                margin-bottom: 10px;
            }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 40px;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }

        .social-login {
            margin-top: 30px;
            padding-top: 30px;
            border-top: 1px solid #dee2e6;
        }

        .social-btn {
            width: 100%;
            margin-bottom: 10px;
            padding: 10px;
            font-weight: 600;
        }

        .btn-facebook {
            background-color: #3b5998;
            color: white;
        }

        .btn-google {
            background-color: #dd4b39;
            color: white;
        }
    </style>
}

<div class="login-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="login-card">
                    <div class="row no-gutters">
                        <div class="col-md-5 d-none d-md-block login-image">
                            <!-- Left side content -->
                        </div>

                        <div class="col-md-7">
                            <div class="login-form">
                                <div class="login-header">
                                    <h2><i class="fas fa-sign-in-alt"></i> Đăng nhập</h2>
                                </div>

                                @using (Html.BeginForm("Login", "Account",
                                    new { area = "Customer", ReturnUrl = ViewBag.ReturnUrl },
                                    FormMethod.Post,
                                    new { @class = "needs-validation", novalidate = "novalidate" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @* Username *@
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Username, new { @class = "font-weight-bold" })
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-user"></i>
                                                </span>
                                            </div>
                                            @Html.TextBoxFor(m => m.Username, new
                                            {
                                                @class = "form-control form-control-lg",
                                                placeholder = "Nhập tên đăng nhập",
                                                autofocus = "autofocus"
                                            })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
                                    </div>

                                    @* Password *@
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "font-weight-bold" })
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fas fa-lock"></i>
                                                </span>
                                            </div>
                                            @Html.PasswordFor(m => m.Password, new
                                            {
                                                @class = "form-control form-control-lg",
                                                placeholder = "Nhập mật khẩu",
                                                id = "txtPassword"
                                            })
                                        </div>
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                                    </div>

                                    @* Remember Me *@
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", id = "rememberMe" })
                                            <label class="custom-control-label" for="rememberMe">
                                                Ghi nhớ đăng nhập
                                            </label>
                                        </div>
                                    </div>

                                    @* Submit Button *@
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-login btn-lg btn-block">
                                            <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                        </button>
                                    </div>

                                    @* Register Link *@
                            <div class="text-center">
                                <p class="mb-0">
                                    Chưa có tài khoản?
                                    @Html.ActionLink("Đăng ký ngay", "Register", "Account",
                                        new { area = "Customer" },
                                        new { @class = "font-weight-bold text-primary" })
                                </p>
                            </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            // Toggle password visibility
            $('#togglePassword').click(function () {
                var passwordField = $('#txtPassword');
                var icon = $(this).find('i');

                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Form validation
            $('form').on('submit', function (e) {
                var username = $('#Username').val().trim();
                var password = $('#txtPassword').val();

                if (!username) {
                    e.preventDefault();
                    alert('Vui lòng nhập tên đăng nhập');
                    $('#Username').focus();
                    return false;
                }

                if (!password) {
                    e.preventDefault();
                    alert('Vui lòng nhập mật khẩu');
                    $('#txtPassword').focus();
                    return false;
                }
            });
        });
    </script>
}
