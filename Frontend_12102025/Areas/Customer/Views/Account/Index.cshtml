@model Frontend_12102025.Models.Customer

@{
    ViewBag.Title = "Cập nhật hồ sơ";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";

    // Lấy địa chỉ hiện tại để hiển thị
    string currentAddress = "";
    if (Model.User != null && Model.User.ShippingAddresses != null && Model.User.ShippingAddresses.Any())
    {
        currentAddress = Model.User.ShippingAddresses.FirstOrDefault().AddressLine;
    }
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fa-solid me-2"></i>Cập nhật thông tin</h4>
                </div>
                <div class="card-body">
                    @* Hiển thị thông báo lỗi nếu có *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
                        </div>
                    }

                    @* Form Post về Action UpdateContact *@
                    @using (Html.BeginForm("UpdateContact", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.CustomerId)
                        @Html.HiddenFor(m => m.UserId)

                        @* Phần thông tin User (Bảng Users) *@
                        <div class="mb-3">
                            <label class="form-label fw-bold">Họ và tên</label>
                            @* Binding vào User.FullName *@
                            @Html.TextBoxFor(m => m.User.FullName, new { @class = "form-control", required = "required" })
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Email</label>
                                @Html.TextBoxFor(m => m.User.Email, new { @class = "form-control", type = "email", required = "required" })
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                @Html.TextBoxFor(m => m.User.Phone, new { @class = "form-control" })
                            </div>
                        </div>

                        @* Phần thông tin Customer (Bảng Customers) *@
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Ngày sinh</label>
                                @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date",
                               min = "1924-01-01",
                               max = DateTime.Now.ToString("yyyy-MM-dd"),
                               placeholder = "dd/mm/yyyy (VD: 04/04/2006)" })
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Giới tính</label>
                                @Html.DropDownListFor(m => m.Gender, new List<SelectListItem>
                                {
                                    new SelectListItem { Text = "Nam", Value = "Nam" },
                                    new SelectListItem { Text = "Nữ", Value = "Nữ" },
                                }, "Chọn giới tính", new { @class = "form-select form-control" })
                            </div>
                        </div>

                        @*Phần địa chỉ (Bảng ShippingAddresses)*@
                        <div class="mb-4">
                            <label class="form-label fw-bold">Địa chỉ giao hàng</label>
                            @* Name="AddressLine"  *@
                            <textarea name="AddressLine" class="form-control" rows="3">@currentAddress</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("ProfileInfo")" class="btn btn-secondary">
                                <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fa-solid fa-save me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
