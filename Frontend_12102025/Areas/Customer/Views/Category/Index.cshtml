@model List<Frontend_12102025.Models.BookEdition>

@{
    ViewBag.Title = ViewBag.CategoryName + " - Bookara";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<style>
    .category-page {
        max-width: 1920px;
        margin: 0 auto;
        padding: 20px;
        background-color: rgb(252,252,234);
    }

    .category-header {
        background-color: white;
        padding: 30px;
        margin-bottom: 30px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    .category-title {
        font-size: 2.5rem;
        color: #333;
        margin-bottom: 10px;
    }

    .category-description {
        color: #666;
        font-size: 1.1rem;
        margin-top: 10px;
    }

    .book-count {
        color: #A08963;
        font-weight: bold;
        margin-top: 15px;
        font-size: 1.1rem;
    }

    .books-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
    }

    .book-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.2);
        }

    .book-image-container {
        width: 100%;
        height: 350px;
        overflow: hidden;
        background-color: #f5f5f5;
    }

    .book-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .book-info {
        padding: 15px;
    }

    .book-title {
        font-size: 1.1rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 8px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 40px;
    }

    .book-author {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .book-price {
        font-size: 1.3rem;
        color: #d9534f;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .book-stock {
        font-size: 0.85rem;
        color: #28a745;
        margin-bottom: 10px;
    }

    .empty-category {
        grid-column: 1 / -1;
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 10px;
    }

        .empty-category i {
            font-size: 5rem;
            color: #ddd;
            margin-bottom: 20px;
        }

        .empty-category h3 {
            color: #666;
            font-size: 1.5rem;
        }

    /* Style cho buttons trong category page */
    .product-buttons-vertical {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-top: 10px;
    }

        .product-buttons-vertical .btn {
            width: 100%;
            justify-content: center;
        }
</style>

<div class="category-page">

    <div class="books-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var book in Model)
            {
                <div class="book-card">
                    <div class="book-image-container">
                        <a href="@Url.Action("ProductDetail", "Home", new { id = book.BookEditionId })">
                            <img src="@book.CoverImage" alt="@book.BookTitle.Title" class="book-image" />
                        </a>
                    </div>
                    <div class="book-info">
                        <h3 class="book-title">@book.BookTitle.Title</h3>
                        <p class="book-author">
                            <i class="fa-solid"></i> @book.BookTitle.Author.AuthorName
                        </p>
                        <p class="book-price">@book.Price.ToString("N0") đ</p>
                        <p class="book-stock">
                            <i class="fa-solid"></i> Còn @book.Stock cuốn
                        </p>

                        @{
                            ViewBag.Quantity = 1;
                            ViewBag.ShowBuyNow = true;
                            ViewBag.addToCart = false;
                            ViewBag.ShowViewDetails = true;
                            ViewBag.ButtonClass = "product-buttons-vertical";
                        }
                        @Html.Partial("~/Areas/Customer/Views/Home/_PVButtons.cshtml", book)

                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-category">
                <i class="fa-solid fa-folder-open"></i>
                <h3>Chưa có sách nào trong danh mục này</h3>
                <p style="color: #999; margin-top: 10px;">Vui lòng quay lại sau hoặc xem danh mục khác.</p>
            </div>
        }
    </div>
</div>
