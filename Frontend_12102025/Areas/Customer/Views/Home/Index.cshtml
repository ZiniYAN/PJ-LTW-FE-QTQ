@model Frontend_12102025.Models.ViewModel.HomeProductVM
@{
    ViewBag.Title = "Customer HomePage";
    //Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}

@*@section Styles {
    <link rel="stylesheet" type="text/css" href="~/Content/CustomerHome.css" />
}*@

<section class="banner" style="max-width:2304px;margin: 0 auto;">
    <div class="container">
        <div class="banner-container content">
            <h2>Chào mừng bạn đến với Bookora</h2>
            <p>Mua sách tốt giá hời ngay nào!</p>
            <a href="#products" class="btnBanner">Bắt đầu mua sắm</a>
        </div>
    </div>
</section>

@* Tim kiem san pham *@
<section class="searchProd">
    <div class="container">
        <h2>Tìm kiếm sản phẩm</h2>
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <div class="search-container">
                @Html.TextBoxFor(m => m.SearchTerm, new
                {
                    @class = "form-control search-input",
                    placeholder = "Nhập tên, mô tả hoặc loại sản phẩm"
                })
                <button type="submit" class="btn search-button">Tìm kiếm</button>
            </div>
        }
    </div>
</section>

<div id="products">
    @Html.Partial("_PVFeatureProduct", Model)
    @Html.Partial("_PVNewProduct", Model)
</div>
