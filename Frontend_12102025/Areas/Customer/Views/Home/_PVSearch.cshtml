@model PagedList.IPagedList<Frontend_12102025.Models.BookEdition>

<link rel="stylesheet" type="text/css" href="~/Content/Customer Stylesheet/FeatureProduct.css" />
<link rel="stylesheet" type="text/css" href="~/Content/Customer Stylesheet/Buttons.css" />

@if (Model != null && Model.Any())
{
    <section class="listProd">
        <div class="list-container">
            @foreach (var product in Model)
            {
                <div class="fproduct-item">
                    <a href="@Url.Action("ProductDetail", "Home", new { area = "Customer", id = product.BookEditionId })">
                        <img src="@product.CoverImage" alt="@product.BookTitle.Title" />
                    </a>
                    <div>
                        <p class="prodName">@product.BookTitle.Title</p>
                        <p class="prodCate">@product.BookTitle.Category.CategoryName</p>
                        <p class="prodPrice">@String.Format("{0:N0}", product.Price) đ</p>
                        @{
                            ViewBag.Quantity = 1;
                            ViewBag.ShowBuyNow = true;
                            ViewBag.addToCart = false;
                            ViewBag.ShowViewDetails = true;
                            ViewBag.ButtonClass = "product-buttons-compact";
                        }
                        @Html.Partial("_PVButtons", product)
                    </div>
                </div>
            }
        </div>
    </section>
}
else
{
    <div class="no-results" style="text-align: center; padding: 60px 20px;">
        <i class="fa-solid fa-search" style="font-size: 64px; color: #ccc; margin-bottom: 20px;"></i>
        <h4 style="color: #666;">Không tìm thấy sản phẩm nào</h4>
        <p style="color: #999;">Vui lòng thử lại với từ khóa khác</p>
    </div>
}
